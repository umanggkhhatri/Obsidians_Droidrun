# Social Media Agent System Configuration

# Environment
APP_ENV=production

# Logging
LOG_LEVEL=INFO

# WhatsApp Configuration
WHATSAPP_PHONE_NUMBER=+1234567890

# Agent Timeouts (seconds)
AGENT_TIMEOUT=60
CRAWL_TIMEOUT=30

# Link Crawling Configuration
MAX_CRAWL_DEPTH=2
MAX_URLS_TO_CRAWL=5
MAX_CHILD_URLS=2

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=2

# Platform-Specific Settings
INSTAGRAM_ENABLED=true
INSTAGRAM_TIMEOUT=60

LINKEDIN_ENABLED=true
LINKEDIN_TIMEOUT=60

REDDIT_ENABLED=true
REDDIT_TIMEOUT=60

FACEBOOK_ENABLED=true
FACEBOOK_TIMEOUT=60

# Output Configuration
SAVE_POSTS_TO_FILE=true
POSTS_OUTPUT_DIR=./output/posts
RESULTS_OUTPUT_DIR=./output/results
